<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashScreen">
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.mobileclient.fragments.SplashScreen"
        android:label="fragment_splash_screen">
        <action
            android:id="@+id/splashscreen_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/splashscreen_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/splashscreen_to_guestscreen"
            app:destination="@id/guestScreen" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.mobileclient.fragments.Login"
        android:label="fragment_login">
        <action
            android:id="@+id/login_to_splashscreen"
            app:destination="@id/splashScreen" />
        <action
            android:id="@+id/login_to_forgotpassword"
            app:destination="@id/forgotPassword" />
        <action
            android:id="@+id/login_to_loggedin"
            app:destination="@id/loggedInScreen" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.mobileclient.fragments.Register"
        android:label="fragment_register">
        <action
            android:id="@+id/register_to_splashscreen"
            app:destination="@id/splashScreen" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.example.mobileclient.fragments.ForgotPassword"
        android:label="fragment_forgot_password" />
    <fragment
        android:id="@+id/loggedInScreen"
        android:name="com.example.mobileclient.fragments.LoggedInScreen"
        android:label="fragment_logged_in_screen">
        <action
            android:id="@+id/action_loggedInScreen_to_splashScreen"
            app:destination="@id/splashScreen" />
        <action
            android:id="@+id/action_loggedInScreen_to_userInfo"
            app:destination="@id/userInfo" />
    </fragment>
    <fragment
        android:id="@+id/guestScreen"
        android:name="com.example.mobileclient.fragments.GuestScreen"
        android:label="fragment_guest_screen">
        <action
            android:id="@+id/action_guestScreen_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_guestScreen_to_register"
            app:destination="@id/register" />
    </fragment>
    <fragment
        android:id="@+id/userInfo"
        android:name="com.example.mobileclient.fragments.UserInfo"
        android:label="fragment_user_info" />
</navigation>