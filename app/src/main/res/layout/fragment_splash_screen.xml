<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="536dp">

            <TextView
                android:id="@+id/splash_screen_appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="112dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/splash_screen_login"
                style="@style/Widget.Material3.Button"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:text="@string/login_button_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toEndOf="@+id/splash_screen_appname"
                app:layout_constraintStart_toStartOf="@+id/splash_screen_appname"
                app:layout_constraintTop_toBottomOf="@+id/splash_screen_appname" />

            <Button
                android:id="@+id/splash_screen_signin"
                style="@style/Widget.Material3.Button"
                android:layout_width="172dp"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:text="@string/sign_up"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toEndOf="@+id/splash_screen_login"
                app:layout_constraintStart_toStartOf="@+id/splash_screen_login"
                app:layout_constraintTop_toBottomOf="@+id/splash_screen_login" />

            <Button
                android:id="@+id/guest_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="178dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:text="@string/guest"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toEndOf="@+id/splash_screen_signin"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/splash_screen_signin"
                app:layout_constraintTop_toBottomOf="@+id/splash_screen_signin" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>